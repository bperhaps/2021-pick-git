pipeline {
    agent any

    environment {
       INSTANCE_PEM_PATH = credentials('instances-pem-path')
       HOST = credentials('HOST_S3_PROXY')
    }

    stages {
        stage('Build') {
            when { changeset "s3proxy/**" }
            steps {
                echo 'build backend...'

                dir('./backend/pick-git') {
                    sh '''
                        ./gradlew -x test clean build
                    '''
                }
            }
        }

        stage('Test') {
            when { changeset "s3proxy/**" }
            steps {
                echo 'test backend...'

                dir('./s3proxy/s3proxy') {
                    sh '''
                        ./gradlew test
                    '''
                }
            }
        }

        stage('Deploy') {
            when { changeset "s3proxy/**" }
            steps {
                echo 'deploying backend...'

                dir('./s3proxy/s3proxy/script') {
                  sh '''
                    chmod 755 ./deploy_script.sh
                    ./deploy_script.sh -c ~/.ssh/EC2-DEV-PICK-GIT.pem -h $HOST -d prod
                  '''
                }
            }
        }
    }
}
